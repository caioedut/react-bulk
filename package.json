{
  "name": "root",
  "private": true,
  "author": "CaioEduT <caioedut@gmail.com>",
  "homepage": "https://github.com/caioedut/react-bulk",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "prebuild": "lerna exec --parallel -- rimraf dist typings",
    "build": "lerna exec --parallel -- rollup -c ../../rollup.config.js",
    "prepublishOnly": "yarn build",
    "publish:canary": "lerna version prerelease --no-changelog --preid next",
    "publish:stable": "lerna version --no-changelog",
    "predeploy": "yarn publish:stable && yarn build",
    "deploy": "yarn deploy:core && yarn deploy:web && yarn deploy:native",
    "deploy:core": "yarn workspace @react-bulk/core publish --access public",
    "deploy:web": "yarn workspace @react-bulk/web publish --access public",
    "deploy:native": "yarn workspace @react-bulk/native publish --access public"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/react": ">=16.4.7",
    "@types/react-native": ">=0.61.0",
    "concurrently": ">=7.0.0",
    "lerna": "^5.1.4",
    "prettier": ">=2.6.2",
    "react": ">=16.8.0",
    "react-native": ">=0.61.0",
    "rimraf": ">=3.0.0",
    "rollup": "^2.38.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "rollup-plugin-url": "^3.0.1",
    "typescript": ">=4.0.0"
  },
  "dependencies": {
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0"
  }
}
