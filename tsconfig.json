{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "lib": ["DOM"],
    "types": ["node"],
    "jsx": "react-jsx",
    "baseUrl": "./",
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@react-bulk/core": [
        "packages/core/src"
      ],
      "@react-bulk/native": [
        "packages/native/src"
      ],
      "@react-bulk/web": [
        "packages/web/src"
      ]
    }
  }
}
